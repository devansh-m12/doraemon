{
  "name": "eth-aptos-fusion-swap",
  "version": "1.0.0",
  "description": "ETH-APTOS Fusion+ 1inch Extension Protocol - Cross-chain atomic swap protocol between Ethereum and Aptos",
  "main": "index.js",
  "scripts": {
    "build": "aptos move build",
    "test": "aptos move test",
    "test:integration": "npm run test && npm run test:e2e",
    "test:e2e": "jest --testPathPattern=tests/",
    "test:security": "npm run test && npm run audit",
    "audit": "npm audit",
    "deploy:local": "aptos move publish --profile local",
    "deploy:testnet": "aptos move publish --profile testnet",
    "deploy:mainnet": "aptos move publish --profile mainnet",
    "start:local": "aptos node start",
    "stop:local": "aptos node stop",
    "clean": "aptos move clean",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js,.move",
    "docs": "npm run docs:generate && npm run docs:serve",
    "docs:generate": "typedoc",
    "docs:serve": "http-server docs -p 8080"
  },
  "keywords": [
    "aptos",
    "ethereum",
    "cross-chain",
    "atomic-swap",
    "fusion-plus",
    "1inch",
    "defi",
    "blockchain",
    "move",
    "solidity"
  ],
  "author": "ETH-APTOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eth-aptos/fusion-swap.git"
  },
  "bugs": {
    "url": "https://github.com/eth-aptos/fusion-swap/issues"
  },
  "homepage": "https://eth-aptos.org",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.8.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aptos": "^1.21.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "ethers": "^6.15.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@1inch/tsconfig": "^1.0.9",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "config": {
    "aptos": {
      "framework": "main",
      "move": {
        "version": "1.0.0"
      }
    }
  }
}