# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Set this to 'local' or 'sepolia' to switch between networks
NETWORK=sepolia

# =============================================================================
# LOCAL NETWORK CONFIGURATION
# =============================================================================
# Local Hardhat Network (Chain ID: 1337)
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_PRIVATE_KEY=your_local_private_key_here
LOCAL_CONTRACT_ADDRESS=your_local_contract_address_here
LOCAL_WALLET_ADDRESS=your_local_wallet_address_here

# =============================================================================
# SEPOLIA TESTNET CONFIGURATION
# =============================================================================
# Sepolia Testnet (Chain ID: 11155111)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key_here
SEPOLIA_PRIVATE_KEY=your_ethereum_private_key_here
SEPOLIA_CONTRACT_ADDRESS=your_deployed_contract_address_here
SEPOLIA_WALLET_ADDRESS=your_ethereum_wallet_address_here

# =============================================================================
# 1INCH FUSION SDK CONFIGURATION
# =============================================================================
# Works with both local and Sepolia networks
FUSION_API_URL=https://api.1inch.dev/fusion
DEV_PORTAL_API_TOKEN=your_1inch_api_token_here

# =============================================================================
# ICP CONFIGURATION
# =============================================================================
# ICP Testnet Configuration
ICP_CANISTER_ID=your_icp_canister_id_here
ICP_NETWORK_URL=https://ic0.app

# =============================================================================
# PHASE 4: 1INCH FUSION+ CONFIGURATION
# =============================================================================
# 1inch Fusion+ API configuration
FUSION_API_URL=https://api.1inch.dev/fusion
DEV_PORTAL_API_TOKEN=your_1inch_api_token_here

# Fusion+ integration settings
FUSION_MAX_SLIPPAGE=0.5
FUSION_GAS_LIMIT=500000
FUSION_DEADLINE=300
FUSION_MEV_PROTECTION=true
FUSION_CROSS_CHAIN_ENABLED=true

# FusionResolver contract address (deployed separately)
FUSION_RESOLVER_ADDRESS=your_fusion_resolver_contract_address_here

# =============================================================================
# PHASE 3: CHAIN FUSION CONFIGURATION
# =============================================================================
# Enable Chain Fusion for direct Ethereum access via ICP
CHAIN_FUSION_ENABLED=true

# ICP EVM Canister ID for Chain Fusion integration
ICP_EVM_CANISTER_ID=your_icp_evm_canister_id_here

# Ethereum contract address for Chain Fusion transactions
ETHEREUM_CONTRACT_ADDRESS=your_ethereum_contract_address_here

# Authorized Ethereum senders for Chain Fusion
AUTHORIZED_ETHEREUM_SENDERS=0x1234567890123456789012345678901234567890,0x0987654321098765432109876543210987654321

# =============================================================================
# BRIDGE CONFIGURATION
# =============================================================================
# Bridge settings (same for both networks)
BRIDGE_FEE_PERCENTAGE=10
MIN_SWAP_AMOUNT=1000000000000000
MAX_SWAP_AMOUNT=100000000000000000000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Test Configuration (for development)
TEST_MODE=true
TEST_ICP_CANISTER_ID=your_test_canister_id_here

# =============================================================================
# ETHERSCAN CONFIGURATION (for Sepolia verification)
# =============================================================================
ETHERSCAN_API_KEY=your_etherscan_api_key_here 