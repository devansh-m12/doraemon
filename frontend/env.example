# =============================================================================
# BRIDGE SERVICE CONFIGURATION
# =============================================================================
# Set this to 'local' or 'sepolia' to switch between networks
NEXT_PUBLIC_NETWORK=local

# =============================================================================
# LOCAL NETWORK CONFIGURATION
# =============================================================================
# Local Hardhat Network (Chain ID: 1337)
NEXT_PUBLIC_LOCAL_RPC_URL=http://127.0.0.1:8545
NEXT_PUBLIC_LOCAL_PRIVATE_KEY=your_local_private_key_here
NEXT_PUBLIC_LOCAL_CONTRACT_ADDRESS=your_local_contract_address_here
NEXT_PUBLIC_LOCAL_WALLET_ADDRESS=your_local_wallet_address_here

# =============================================================================
# SEPOLIA TESTNET CONFIGURATION
# =============================================================================
# Sepolia Testnet (Chain ID: 11155111)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key_here
NEXT_PUBLIC_SEPOLIA_PRIVATE_KEY=your_ethereum_private_key_here
NEXT_PUBLIC_SEPOLIA_CONTRACT_ADDRESS=your_deployed_contract_address_here
NEXT_PUBLIC_SEPOLIA_WALLET_ADDRESS=your_ethereum_wallet_address_here

# =============================================================================
# ICP CONFIGURATION
# =============================================================================
# ICP Testnet Configuration
NEXT_PUBLIC_ICP_CANISTER_ID=your_icp_canister_id_here
