# ETH-ICP Bridge Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Network Configuration
# Set to 'local' for local Hardhat network or 'sepolia' for Sepolia testnet
NEXT_PUBLIC_NETWORK=local

# Local Network Configuration (for development)
NEXT_PUBLIC_LOCAL_RPC_URL=http://127.0.0.1:8545
NEXT_PUBLIC_LOCAL_PRIVATE_KEY=your_local_private_key_here
NEXT_PUBLIC_LOCAL_CONTRACT_ADDRESS=your_local_contract_address_here
NEXT_PUBLIC_LOCAL_WALLET_ADDRESS=your_local_wallet_address_here

# Sepolia Network Configuration (for testnet)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_SEPOLIA_PRIVATE_KEY=your_private_key_here
NEXT_PUBLIC_SEPOLIA_CONTRACT_ADDRESS=your_deployed_contract_address
NEXT_PUBLIC_SEPOLIA_WALLET_ADDRESS=your_wallet_address

# ICP Configuration
NEXT_PUBLIC_ICP_CANISTER_ID=your_icp_canister_id_here

# Optional: 1inch Fusion SDK (for advanced swap features)
NEXT_PUBLIC_FUSION_API_URL=https://api.1inch.dev/fusion
NEXT_PUBLIC_DEV_PORTAL_API_TOKEN=your_1inch_api_token

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Note: 
# - For local development, use the Hardhat network configuration
# - For testnet, use the Sepolia configuration
# - Private keys should be kept secure and never committed to version control
# - Contract addresses should be updated after deploying the bridge contract 