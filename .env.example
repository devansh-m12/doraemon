# Ethereum Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here
ETHEREUM_CHAIN_ID=1

# Testnet Configuration
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here

# 1inch Fusion Configuration
FUSION_API_URL=https://api.1inch.dev/fusion
DEV_PORTAL_API_TOKEN=your_1inch_api_token_here

# ICP Configuration
ICP_CANISTER_ID=your_icp_canister_id_here
ICP_NETWORK=local  # local, ic, or custom

# Bridge Configuration
BRIDGE_FEE_PERCENTAGE=0.1
TIMELOCK_DURATION=3600  # 1 hour in seconds
HASHLOCK_TIMEOUT=7200   # 2 hours in seconds

# Security Configuration
MULTISIG_THRESHOLD=3
MIN_SWAP_AMOUNT=1000000000000000  # 0.001 ETH in wei
MAX_SWAP_AMOUNT=100000000000000000000  # 100 ETH in wei

# Development Configuration
DEBUG=true
LOG_LEVEL=info
