{
  "name": "1inch-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for 1inch DEX aggregator APIs with service-based architecture",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "1inch-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-index.ts",
    "dev:serve": "nodemon http-server.js",
    "serve": "node http-server.js",
    "start": "node dist/index.js",
    "start:http": "node dist/http-index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest tests/services/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs:generate": "typedoc src --out docs/api",
    "prepare": "npm run build"
  },
  "keywords": [
    "1inch",
    "defi",
    "dex",
    "aggregator",
    "mcp",
    "model-context-protocol",
    "api",
    "blockchain",
    "ethereum",
    "web3",
    "service-based",
    "modular"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/1inch-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^4.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "redis": "^4.6.0",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "bigint-conversion": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "typedoc": "^0.25.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ]
}