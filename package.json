{
  "name": "doraemon-bridge",
  "version": "1.0.0",
  "description": "1inch Fusion+ Extension for Ethereum-ICP Cross-Chain Swaps",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npx tsc && cd eth-icp-bridge/icp-canisters/bridge_canister && dfx build && cd ../../../ && npx hardhat compile",
    "start:local": "node dist/src/server-local.js",
    "test:fusion-plus-compliance": "node scripts/test-fusion-plus-compliance.js",
    "deploy:resolver-v2": "npx hardhat run eth-icp-bridge/ethereum-contracts/scripts/deploy-resolver-v2.js --network localhost",
    "test:resolver-v2": "node scripts/test-resolver-v2.js",
    "test:unit": "jest",
    "test:contracts": "npx hardhat test",
    "deploy:local": "cd eth-icp-bridge/icp-canisters/bridge_canister && dfx deploy",
    "hardhat:node": "npx hardhat node",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:test": "npx hardhat test",
    "icp:start": "dfx start --clean --background",
    "icp:stop": "dfx stop",
    "icp:deploy": "cd eth-icp-bridge/icp-canisters/bridge_canister && dfx deploy --network local",
    "clean": "rm -rf dist deployments .hardhat artifacts cache",
    "reset": "npm run clean && npm install && npm run build"
  },
  "keywords": [
    "1inch",
    "fusion",
    "bridge",
    "ethereum",
    "icp",
    "cross-chain"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@1inch/fusion-sdk": "^2.0.0",
    "@dfinity/agent": "^0.21.0",
    "@dfinity/candid": "^0.21.0",
    "@dfinity/identity": "^0.21.0",
    "@openzeppelin/contracts": "^5.4.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.5.0",
    "hardhat": "^2.26.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.1.6"
  }
}
